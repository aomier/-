page {
  background-color: #f6f6f6;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica,
    Segoe UI, Arial, Roboto, 'PingFang SC', 'miui', 'Hiragino Sans GB', 'Microsoft Yahei',
    sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 通用标题样式 */
.page-title {
  font-size: 40rpx;
  font-weight: bold;
  text-align: center;
  margin: 40rpx 0;
  color: #333;
}

/* 通用按钮样式 */
button {
  border-radius: 12rpx;
  font-size: 32rpx;
  transition: opacity 0.3s;
}

button:active {
  opacity: 0.8;
}

button[type="primary"] {
  background: #07c160;
}

button[type="warn"] {
  background: #ff4444;
  color: #fff;
}
